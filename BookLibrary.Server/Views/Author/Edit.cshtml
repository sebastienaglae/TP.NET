@model BookLibrary.Server.ViewModels.EditAuthorViewModel
@{
    ViewData["Title"] = "Edit Author";
}
<div class="card">
    <div class="card-header">
        <i class="icon-plus"></i> Edit Author
    </div>
    <div class="card-body">
        <h2 class="text-center mt-3">Edit author - @Model.FirstName @Model.LastName</h2>
        <form method="post" asp-action="Edit">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <input type="submit" value="Edit" class="btn btn-primary"/>
            <a asp-controller="Author" asp-action="List" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>