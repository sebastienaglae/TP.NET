@model BookLibrary.Server.ViewModels.DetailsAuthorViewModel
@{
    ViewData["Title"] = "Details Author";
}
<div class="card">
    <div class="card-header">
        <i class="icon-plus"></i> Author Details
    </div>
    <div class="card-body">
        <h2 class="text-center mt-3">Author - @Model.FirstName @Model.LastName</h2>
        <div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control"  readonly/>
            </div>
            <!-- list of books -->
            <div class="form-group">
                <label>Books</label>
                <table class="table table-responsive-sm table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var book in Model.Books)
                    {
                        <tr>
                            <td>@book.Name</td>
                            <td>@book.Price</td>
                            <td>
                                @await Html.PartialAsync("../Book/_ManageActions", book.Id)
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>