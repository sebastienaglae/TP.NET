@using BookLibrary.Server.Models
@using BookLibrary.Server.Extensions
@model int

<a asp-controller="Book" asp-action="Details" asp-route-id="@Model" class="btn btn-primary my-1">
    <i class="fa fa-eye"></i>
    View Details
</a>
@if (User.IsInRole(AdminRole.EditBooks))
{
    <a asp-controller="Book" asp-action="Edit" asp-route-id="@Model" class="btn btn-secondary my-1">
        <i class="fa fa-edit"></i>
        Edit
    </a>
}
@if (User.IsInRole(AdminRole.DeleteBooks))
{
    <a asp-controller="Book" asp-action="Delete" asp-route-id="@Model" class="btn btn-danger my-1">
        <i class="fa fa-trash"></i>
        Delete
    </a>
}